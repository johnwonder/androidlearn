<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android_custom="http://schemas.android.com/apk/res/com.czm.xcarcprogressview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:layout_margin="10dp"
        android:text="体验" />
    <RelativeLayout
        android:layout_centerInParent="true" 
        android:layout_width="200dip"   
        android:layout_height="200dip" 
        android:background="#2C5AA9"
        >
        <!-- 蓝色背景 -->
        <com.czm.xcarcprogressview.XCArcProgressBar
	    android:layout_centerInParent="true"
        android:id="@+id/arcProgressBar"   
        android:layout_width="200dip"   
        android:layout_height="200dip"   
      
        android_custom:textIsDisplayable="true"   
        android_custom:textSize="50sp"
         >
         </com.czm.xcarcprogressview.XCArcProgressBar>
    </RelativeLayout>
	
   
    
    
    
        
    

</RelativeLayout>
